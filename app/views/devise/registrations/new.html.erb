<h2>Sign up</h2>
<div class="form-signin">
  <%= simple_form_for(:user, url: user_registration_path, html:{multipart:true}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.input :full_name%>
    </div>

    <div class="field">
      <%= f.input :email, autofocus: true%>
    </div>

    <div class="field">
      <%= f.input :password, autocomplete: "off"%>
    </div>

    <div class="field">
      <%= f.input :password_confirmation, autocomplete: "off"%>
    </div>

    <div class="field">
      <%= f.input :profile_picture, as: :file %>
    </div>

    <div class="field">
      <%= f.input :resume, as: :file %>
    </div>

    <div class="field">
      <%= f.input :specialty %>
    </div>

    <div class="field">
      <%= f.input :target_salary %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up!" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
