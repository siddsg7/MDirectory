<%= simple_form_for(@post, :controller => "posts#index") do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :hospital %>
    <%= f.input :body %>
    <%= f.input :offering_salary %>
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
