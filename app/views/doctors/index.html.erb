<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Full name</th>
      <th>Education</th>
      <th>Specialty</th>
      <th>Target salary</th>
      <th>Certifications</th>
      <th>Profile picture</th>
      <th>Resume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.title %></td>
        <td><%= doctor.full_name %></td>
        <td><%= doctor.education %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.target_salary %></td>
        <td><%= doctor.certifications %></td>
        <td><%= doctor.profile_picture %></td>
        <td><%= doctor.resume %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

